</style>
<div class="tech-btm">
    <img src="~/resim/subscribe.jpg" class="img-fluid" alt="">
</div>
<div class="tech-btm">
    <p>Daha fazla haber almak için sitemize abone olun </p>
    <form method="post" >
        <input type="email" id="txtMail" name="NewsLetterMail" placeholder="Email" required>
        <input type="submit" id="btn" value="Abone Ol">
    </form>
</div>
<script type="text/javascript">
    function validateEmail() {
        var email = document.getElementById('NewsLetterMail').value;
        var re = /^(([^<>()\[\]\\.,;:\s@@"]+(\.[^<>()\[\]\\.,;:\s@@"]+)*)|(".+"))@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
        if (!re.test(email)) {
            document.getElementById('NewsLetterMail').classList.add('error');
            return false;
        }
    }

    $("#btn").click(function () {
        var values = {
            NewsLetterMail: $("#txtMail").val()
        };
        $.ajax({
            type: "post",
            url: "/Blog/PartialSubscribe",
            data: values,
            success: function (func) {
                var result = jQuery.parseJSON(func);
            }
        });
    });
</script>
