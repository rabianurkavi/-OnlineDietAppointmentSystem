<div class="comment-top">
    <h4>Bir yorum bırakın</h4>
    <div class="comment-bottom">
        <form method="post">

            <input class="form-control" id="title" type="text" name="CommentTitle" placeholder="Konu" required="">

            <textarea class="form-control" id="message" name="CommentContent" placeholder="Mesaj..." required=""></textarea>

            <input class="form-control" id="score" type="number" name="BlogScore" placeholder="Puanla" required="">
            <br/>

            <button type="submit" id="btn" class="btn btn-primary submit">Gönder</button>
        </form>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#btn").click(function () {
            var values = {
                CommentTitle: $("#title").val(),
                BlogScore: $("#score").val(),
                CommentContent: $("#message").val(),
            };
            $.ajax({
                type: "post",
                url: "/BlogComment/PartialAddComment/",
                data: values,
                success: function (func) {
                    var result = jQuery.parseJSON(func);
                }
            });
        });
    });
</script>