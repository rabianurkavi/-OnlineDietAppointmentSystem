@model Entities.Concrete.SiteContact
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/web/css/contact.css" rel="stylesheet" type="text/css"/>
<body>
<section class="main-content-w3layouts-agileits">
    <h3 class="tittle"></h3>
    <p class="sub text-center">İletişim Sayfası</p>
    <div class="contact-map inner-sec">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3001156.7577251737!2d32.85972655!3d39.92896825000005!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14dcaa22a12f049f:0x31eefe88f35c42f!2sAnkara%2C%20Turkey!5e0!3m2!1sen!2str!4v1648595314120!50z"></iframe>
    </div>
    <div class="ad-inf-sec bg-light">
        <div class="container">
            <div class="address row">
                <div class="col-lg-4 address-grid">
                    <div class="row address-info">
                        <div class="col-md-4 address-left text-center">
                            <i class="far fa-map"></i>
                        </div>
                        <div class="col-md-8 address-right text-left">
                            <h6>Adres</h6>
                            <p>
                                @Model.SiteContactAdress
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 address-grid">
                    <div class="row address-info">
                        <div class="col-md-4 address-left text-center">
                            <i class="far fa-envelope"></i>
                        </div>
                        <div class="col-md-8 address-right text-left">
                            <h6>Mail</h6>
                            <p>
                                Mail :
                                <a href="mailto:@Model.SiteContactMail"> @Model.SiteContactMail</a>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 address-grid">
                    <div class="row address-info">
                        <div class="col-md-4 address-left text-center">
                            <i class="fas fa-mobile-alt"></i>
                        </div>
                        <div class="col-md-8 address-right text-left">
                            <h6>Telefon</h6>
                            <p>@Model.SiteContactPhone</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Düzenle Butonu -->
    <div class="container text-center mt-4">
        <a href="/AdminContact/ContactUpdate/@Model.SiteContactID" class="btn btn-primary">İletişim Sayfasını Düzenle</a>
    </div>

    @section scripts { }

</section>
</body>