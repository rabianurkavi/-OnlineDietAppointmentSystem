@using Entities.Concrete
@model List<Consultant>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <style>
        .product-desc {
            display: flex;
            flex-direction: column;
            width: 100%;
        }

        .product-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .product-details {
            display: flex;
            align-items: center;
        }

        .rating {
            display: flex;
            align-items: center;
            margin-top: 5px;
        }

            .rating i {
                color: gold;
                margin-right: 2px;
            }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
</head>
<body>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6">
                    <div class="ibox">
                        <div class="ibox-content product-box">
                            <div class="product-details">
                                <img class="rounded-circle" src="~/resim/@item.ConsultantImage" height="165" width="165" style="margin-right: 20px;" />
                                <div class="product-desc">
                                    <div class="product-header">
                                        @if (item.ConsultantStatus == true)
                                        {
                                            <small class="text-muted">Kullanıcı Aktif</small>
                                            <a href="#" class="product-name"> @item.ConsultantName @item.ConsultantSurName</a>
                                        }
                                        else
                                        {
                                            <small class="text-muted">Kullanıcı Aktif Değil</small>
                                            <a href="#" class="product-name"> @item.ConsultantName @item.ConsultantSurName</a>
                                        }
                                        <font color="red">
                                            <span class="product-price">
                                                <a href="/AdminConsultant/ConsultantDetails/@item.ConsultantID"><font color="white"><i class="fa fa-hand-o-right"> Profil Detay </i></font></a>
                                            </span>
                                        </font>
                                    </div>
                                    <div class="small m-t-xs">
                                        @item.ConsultantEmail
                                    </div>
                                    <div class="rating">
                                        @for (var i = 1; i <= 5; i++)
                                        {
                                            @if (item.RatingScore >= i)
                                            {
                                                <i class="fas fa-star"></i>
                                            }
                                            else if (item.RatingScore >= i - 0.5)
                                            {
                                                <i class="fas fa-star-half-alt"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-star"></i>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    @section scripts{ }
</body>
</html>