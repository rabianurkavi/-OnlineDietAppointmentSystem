@model Entities.Concrete.Message
@{
    ViewData["Title"] = "MessageDetailsSendBox";
    Layout = "~/Views/Shared/_ConsultantLayout.cshtml";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gelen Mesaj Detayı</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .container {
            max-width: 1000px;
            margin: 20px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .message-header {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

        .sender-avatar {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            margin-right: 15px;
        }

        .message-details {
            flex-grow: 1;
        }

            .message-details h4 {
                margin-top: 0;
                margin-bottom: 10px;
            }

            .message-details p {
                margin: 0;
                color: #666;
            }

        .message-content {
            margin-bottom: 20px;
            padding-bottom: 20px;
            border-bottom: 1px solid #eee;
        }

            .message-content p {
                margin: 0;
            }

        .message-date {
            font-size: 14px;
            color: #888;
        }

        .back-button {
            background-color: #000;
            color: #fff;
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            text-decoration: none;
            transition: background-color 0.3s;
            display: inline-flex;
            align-items: center;
        }

            .back-button:hover {
                background-color: #333;
                color: #fff;
            }


            .back-button i {
                margin-right: 5px;
            }

        .reply-button {
            background-color: #f0f0f0;
            color: #333;
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            text-decoration: none;
            transition: background-color 0.3s;
            display: inline-flex;
            align-items: center;
        }

            .reply-button:hover {
                background-color: #ddd;
                color: #000;
            }

            .reply-button i {
                margin-right: 5px;
            }
    </style>
</head>
<body>
<div class="container">
    <div class="message-header">
        <img src="~/resim/@Model.SenderUser.ClientImage" alt="Sender Avatar" class="sender-avatar">
        <div class="message-details">
            <h4>@Model.Subject</h4>
            <p>@Model.SenderUser.ClientName @Model.SenderUser.ClientSurName</p>
            <p>@Model.SenderUser.ClientEmail</p>
        </div>
    </div>
    <div class="message-content">
        <p>@Model.MessageDetails</p>
    </div>
    <div class="message-date">
        <p>Gönderilme Tarihi: @Model.MessageDate.ToString("dd/MM/yyyy HH:mm")</p>
    </div>
    <div>
        <a href="javascript:history.back()" class="back-button"><i class="fas fa-arrow-left"></i> Geri</a>
    </div>
</div>
</body>
</html>