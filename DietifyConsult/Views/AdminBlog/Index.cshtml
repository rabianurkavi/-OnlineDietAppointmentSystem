﻿@using Entities.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            @foreach (var item in Model)
            {
                @if(item.Status==true)
                {
                <div class="col-md-3">
                    <div class="ibox">
                        <div class="ibox-content product-box">


                            <img src="~/resim/@item.BlogImage" height="200" width="250" />

                            <div class="product-desc">
                                <span class="product-price">
                                        @(((DateTime)item.BlogCreateDate).ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR")))
                                </span>
                                <small class="text-muted">@item.Consultant.ConsultantName @item.Consultant.ConsultantSurName</small>
                                <a href="#" class="product-name"> @item.BlogTitle</a>



                                <div class="small m-t-xs">
                                    @(item.BlogDescription.Length > 150 ? item.BlogDescription.Substring
                                        (0, item.BlogDescription.Substring(0, 40).LastIndexOf(" ")) + "..."
                                        : item.BlogDescription + "...")
                                </div>
                                <div class="m-t text-righ">

                                        <a href="~/AdminBlog/BlogReadAll/@item.BlogID/" class="btn btn-xs btn-outline btn-primary">Devamını Oku <i class="fa fa-long-arrow-right"></i> </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    </div>
                }
                else
                {
                    
                }
            }
        </div>

    </div>
    @section scripts{ }
</body>

</html>
