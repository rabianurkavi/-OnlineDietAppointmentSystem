@using Entities.Concrete
@model List<About>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="zxx">
<head>
    <link href="~/web/css/single.css" rel='stylesheet' type='text/css' />
    <link href="~/web/css/StyleSheet.css" rel="stylesheet" />
    <style>
        .container {
            margin: 0 auto;
            max-width: 1500px; /* Genişliği artırdık */
            padding: 0 20px; /* Yatay boşlukları azalttık */
        }

        .title {
            text-align: center;
            margin-bottom: 20px;
        }

        .about-image {
            display: block;
            margin: 0 auto;
            max-width: 100%;
            height: auto;
        }

        .about-section {
            text-align: left;
            margin-bottom: 20px;
        }

            .about-section h3 {
                text-align: center;
                margin-top: 20px;
            }

            .about-section p {
                text-align: justify;
                margin: 10px 0;
            }
    </style>
</head>

<body>
    <div class="container">
        <h3 class="title">Hakkımızda</h3>
        <div class="row inner-sec">
            <div class="col-lg-12 left-blog-info-w3layouts-agileits about-section">
                <div class="blog-grid-top">
                    <div class="blog_info_left_grid">
                        <a href="">
                            <img src="~/resim/about.jpg" class="img-fluid about-image" alt="">
                        </a>
                    </div>
                    <h3>Biz Kimiz & Misyonumuz & Vizyonumuz</h3>
                    <br />
                    <br />
                    @foreach (var item in Model)
                    {
                        <p>
                            <strong>@item.AboutLargeTitle</strong>
                        </p>
                        <h6>Biz Kimiz ve Ne Yapıyoruz?</h6>
                        <br />
                        <p>@item.AboutContent</p>
                   
                    <a href="/AdminAbout/AboutUpdate/@item.AboutID" class="btn btn-info">Hakkında Sayfasını Düzenle</a>
                    }
                </div>
            </div>
        </div>
    </div>

    @section scripts { }
</body>
</html>