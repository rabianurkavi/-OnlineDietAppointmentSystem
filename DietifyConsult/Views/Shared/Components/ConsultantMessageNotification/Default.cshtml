@model IEnumerable<Entities.Concrete.Message>
<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
    <h6 class="p-3 mb-0">Messages</h6>
    <div class="dropdown-divider"></div>
    <div class="dropdown-divider"></div>
    @foreach(var item in Model)
    {
    <a href="/Message/MessageDetails/@item.MessageID" class="dropdown-item preview-item">
        <div class="preview-thumbnail">
            <img src="~/resim/@item.SenderUser.ClientImage" alt="image" class="profile-pic">
        </div>
        <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                <h6 class="preview-subject ellipsis mb-1 font-weight-normal"> @Html.Raw(item.MessageDetails.Substring(0, 20))...</h6>
                <p class="text-gray mb-0"> @item.MessageDate.ToString("dd MM yyyy HH:mm") </p>
        </div>
    </a>
    }
    <div class="dropdown-divider"></div>
    <div class="dropdown-divider"></div>
    <h6 class="p-3 mb-0 text-center">Son Mesajlar</h6>
</div>
