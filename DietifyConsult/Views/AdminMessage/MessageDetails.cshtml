@model Entities.Concrete.Message
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body>
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-3">
            <div class="ibox ">
                <div class="ibox-content mailbox-content">
                    <div class="file-manager">
                        <a class="btn btn-block btn-primary compose-mail" href="/Admin/AdminMessage/ComposeMessage/">Mesaj Oluştur</a>
                        <div class="space-25"></div>
                        <h5>Dosyalar</h5>
                        <ul class="folder-list m-b-md" style="padding: 0">
                            <li>
                                <a href="/AdminMessage/InBox/"> <i class="fa fa-inbox "></i> Gelen Mesajlar <span class="label label-warning float-right">@ViewBag.messageInboxTotal</span> </a>
                            </li>
                            <li>
                                <a href="/AdminMessage/SendBox/"> <i class="fa fa-envelope-o"></i> Giden Mesajlar <span class="label label-info float-right">@ViewBag.messageSendTotal</span></a>
                            </li>

                        </ul>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-9 animated fadeInRight">
            <div class="mail-box-header">
                <h2>
                    Mesajın İçeriği
                </h2>
                <div class="mail-tools tooltip-demo m-t-md">


                    <h3>
                        <span class="font-normal">Konu: </span>@Model.Subject
                    </h3>
                    <h5>
                        <span class="float-right font-normal">@Model.MessageDate</span>
                        <span class="font-normal">Gönderen: </span> @Model.SenderUser.ClientName @Model.SenderUser.ClientSurName
                    </h5>
                </div>
            </div>
            <div class="mail-box">


                <div class="mail-body">
                    <p>

                        @Model.MessageDetails
                    </p>

                </div>

                <div class="mail-body text-right tooltip-demo">
                    <a class="btn btn-sm btn-white" href="/AdminMessage/Inbox/"><i class="fa fa-reply"></i> Geri</a>
                    <a class="btn btn-sm btn-white" href="/AdminMessage/SendMessage/@Model.MessageID"><i class="fa fa-arrow-right"></i> Cevapla</a>
                </div>
                <div class="clearfix"></div>


            </div>
        </div>
    </div>
</div>

@section scripts{
}

</body>

</html>